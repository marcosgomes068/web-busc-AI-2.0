# ==================================================
# BUSC-AI 2.0 - Configuração de Ambiente de Produção
# ==================================================
# Este arquivo contém configurações otimizadas para produção

# ==================================================
# CHAVES DE API OBRIGATÓRIAS (PRODUÇÃO)
# ==================================================

COHERE_API_KEY=sua_chave_cohere_producao
SERPER_API_KEY=sua_chave_serper_producao

# ==================================================
# AMBIENTE DE PRODUÇÃO
# ==================================================

NODE_ENV=production
LOG_LEVEL=warn

# ==================================================
# CONFIGURAÇÕES DE PERFORMANCE PARA PRODUÇÃO
# ==================================================

# Limites mais altos para produção
API_RATE_LIMIT=20
WEB_REQUEST_RATE_LIMIT=10

# Configurações de cache estendidas
CACHE_TTL=172800
CACHE_MAX_SIZE=5000

# ==================================================
# TIMEOUTS DE PRODUÇÃO
# ==================================================

REQUEST_TIMEOUT=45000
AI_SERVICE_TIMEOUT=90000

# ==================================================
# SEGURANÇA DE PRODUÇÃO
# ==================================================

ENABLE_COHERE_ENHANCEMENT=true
ENABLE_DETAILED_LOGGING=false
ENABLE_CACHE=true
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ==================================================
# OTIMIZAÇÃO DE PRODUÇÃO
# ==================================================

MAX_PAGES_TO_ANALYZE=15
MAX_CONTENT_LENGTH=500000
RETRY_ATTEMPTS=5
RETRY_DELAY=2000

# Configurações de IA para produção
AI_MODEL=command-r-plus
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.2
