# ==================================================
# BUSC-AI 2.0 - Configuração de Desenvolvimento Local
# ==================================================
# Otimizado para desenvolvimento local e testes

# ==================================================
# CHAVES DE API (DESENVOLVIMENTO LOCAL)
# ==================================================

COHERE_API_KEY=sua_chave_cohere_dev
SERPER_API_KEY=sua_chave_serper_dev

# ==================================================
# AMBIENTE DE DESENVOLVIMENTO LOCAL
# ==================================================

NODE_ENV=development
LOG_LEVEL=debug

# ==================================================
# CONFIGURAÇÕES DE PERFORMANCE PARA DESENVOLVIMENTO
# ==================================================

# Limites menores para desenvolvimento
API_RATE_LIMIT=5
WEB_REQUEST_RATE_LIMIT=3

# Cache mais curto para testes
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ==================================================
# TIMEOUTS DE DESENVOLVIMENTO
# ==================================================

REQUEST_TIMEOUT=15000
AI_SERVICE_TIMEOUT=30000

# ==================================================
# FUNCIONALIDADES DE DESENVOLVIMENTO
# ==================================================

ENABLE_COHERE_ENHANCEMENT=true
ENABLE_DETAILED_LOGGING=true
ENABLE_CACHE=true
DEBUG_MODE=true
VERBOSE_LOGGING=true

# ==================================================
# TESTES DE DESENVOLVIMENTO
# ==================================================

MAX_PAGES_TO_ANALYZE=5
MAX_CONTENT_LENGTH=100000
RETRY_ATTEMPTS=2
RETRY_DELAY=500

# Configurações de IA para desenvolvimento
AI_MODEL=command-r-plus
AI_MAX_TOKENS=1024
AI_TEMPERATURE=0.5

# Serviço de IA local
AI_SERVICE_PORT=5000
