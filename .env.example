# ==================================================
# BUSC-AI 2.0 - Modelo de Configuração de Ambiente
# ==================================================
# Copie este arquivo para .env e preencha com seus valores reais

# ==================================================
# CHAVES DE API OBRIGATÓRIAS
# ==================================================

# Chave da API Cohere AI (Obrigatória para melhoramento de IA)
# Obtenha sua chave em: https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=sua_chave_cohere_aqui

# Chave da API Serper (Obrigatória para busca na web)
# Obtenha sua chave em: https://serper.dev/dashboard
SERPER_API_KEY=sua_chave_serper_aqui

# ==================================================
# AMBIENTE DA APLICAÇÃO
# ==================================================

# Modo do ambiente: development, production, test
NODE_ENV=development

# Nível de log: error, warn, info, verbose, debug
LOG_LEVEL=info

# ==================================================
# CONFIGURAÇÃO DE PERFORMANCE
# ==================================================

# Limite de taxa para API (requisições por minuto)
API_RATE_LIMIT=10

# Limite de taxa para requisições web (requisições por minuto)
WEB_REQUEST_RATE_LIMIT=5

# Configuração do Cache
CACHE_TTL=86400
CACHE_MAX_SIZE=1000

# ==================================================
# CONFIGURAÇÃO DE TIMEOUT
# ==================================================

# Timeout de requisição em milissegundos
REQUEST_TIMEOUT=30000

# Timeout do serviço de IA em milissegundos
AI_SERVICE_TIMEOUT=60000

# ==================================================
# CONFIGURAÇÕES AVANÇADAS (Opcionais)
# ==================================================

# Máximo de páginas para analisar por consulta
MAX_PAGES_TO_ANALYZE=10

# Comprimento máximo de conteúdo por página (bytes)
MAX_CONTENT_LENGTH=200000

# Configuração de tentativas
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Configuração de busca
SEARCH_RESULTS_PER_QUERY=20
SEARCH_REGION=br
SEARCH_LANGUAGE=pt-BR

# ==================================================
# CONFIGURAÇÃO DO MODELO DE IA
# ==================================================

# Modelo Cohere a ser usado
AI_MODEL=command-r-plus

# Máximo de tokens para respostas de IA
AI_MAX_TOKENS=2048

# Temperatura da IA (0.0 a 1.0)
AI_TEMPERATURE=0.3

# ==================================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==================================================

# Habilitar/desabilitar certas funcionalidades
ENABLE_COHERE_ENHANCEMENT=true
ENABLE_DETAILED_LOGGING=true
ENABLE_CACHE=true

# ==================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ==================================================

# Habilitar modo debug (apenas desenvolvimento)
DEBUG_MODE=false

# Habilitar log verboso (apenas desenvolvimento)
VERBOSE_LOGGING=false

# Porta para o microsserviço de IA (se usando serviço local)
AI_SERVICE_PORT=5000
